<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.stage.Screen?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" prefWidth="${screen.visualBounds.width}"
            prefHeight="${screen.visualBounds.height}">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <Button fx:id="loginButton" layoutX="64.0" layoutY="158.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="163.0" text="Войти" />
    <TextField fx:id="login" layoutX="32.0" layoutY="84.0" prefHeight="25.0" prefWidth="221.0" promptText="Логин" />
   <PasswordField fx:id="password" layoutX="32.0" layoutY="123.0" prefHeight="25.0" prefWidth="221.0" promptText="Пароль" />
   <Button fx:id="createAccountButton" layoutX="64.0" layoutY="215.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="163.0" text="Создать аккаунт" />
</AnchorPane>
